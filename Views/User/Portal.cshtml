@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Thông tin người mua";
}
@model ShopeeViewModel
<link rel="stylesheet" href="~/css/user_portal.css">
<div class="app__container">
    <div class="user-portal">
        <div class="grid wide">
            <div class="user-portal__start">
                <div class="portal__start">
                    <div class="portal__start-box">
                        <i class="uil uil-clipboard-notes portal__start-box-icon"></i>
                    </div>
                    <div class="portal__start-welcome">Chào mừng đến với SMe!</div>
                    <div class="portal__start-please">Vui lòng cung cấp thông tin để hoàn thành tài khoản người <br> mua
                        trên ShopeeMe</div>
                    <div class="portal__start-btn">
                        <div class="btn btn--primary user-portal__btn-add">Cung cấp thông tin</div>
                    </div>
                </div>
            </div>
            <div class="user-portal__container hide-on-destop">
                <div class="portal__container">
                    <div class="portal__steps">
                        <div class="portal__step active">
                            <div class="portal__step-box"></div>
                            <div class="portal__step-name">Thông tài khoản</div>
                        </div>
                        <div class="portal__step-line-1"></div>
                        <div class="portal__step">
                            <div class="portal__step-box"></div>
                            <div class="portal__step-name">Hoàn tất</div>
                        </div>
                    </div>
                    <div class="user-portal__body">

                    </div>
                    <div class="user-portal__success hide-on-destop">
                        <div class="portal__success">
                            <div class="portal__success-container">
                                <div class="portal__success-box">
                                    <i class="uil uil-check portal__success-box-icon"></i>
                                </div>
                                <div class="portal__success-title">Đăng ký thành công</div>
                                <div class="portal__success-sub">Hãy mua sản phẩm đầu tiên để khởi động hành trình mua
                                    hàng
                                    cùng <br> SMe nhé!</div>
                                <div class="portal__success-btn">
                                    <a href="/" class="btn btn--primary">Mua sản phẩm</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/user_portal.js"></script>